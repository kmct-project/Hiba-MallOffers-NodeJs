<section>
    <br><br>
    <div class="container mt-5">

        <div class="card">
                <div class="card-body">
                     <h3 class="mt-5">View Reply</h3>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">No.</th>
                                    <th scope="col">Shop Name</th>
                                    <th scope="col">Complaint</th>
                                    <th scope="col">Reply</th>
                                    <th scope="col">status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each complaints}}
                                <tr class="align-middle">
                                    <th scope="row">{{incremented @index}}</th>
                                    <td>{{this.shopname}}</td>
                                    <td>{{this.complaint}}</td>
                                    <td>{{this.reply}} </td>
                                    {{#ifeq this.status "Replied"}}
                                    <td><a href="/read-reply?id={{this._id}}" class="btn btn-danger">Read</a>
                                    {{else}}
                                    <td>{{this.status}}</td>
                                    {{/ifeq}}
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

    </div>
    </div>
</section>

