<style>
        #header .logo {
    overflow: hidden;
    padding: 16px 30px 12px 30px;
    background: #009970;
    border-radius: 50px;
}
    #header .header-container {
    background: #ebebeb;
    border-radius: 50px;
}
</style>

<section>
    {{#if orders}}
    <div class="container my-5">
            <h3 class="mb-3">My Bookings</h3>

        <div class="table-responsive">
            <table class="table" id="table">
                <thead class="table-dark">
                    <tr class="align-middle">
                        <th scope="col">Date</th>
                        <th scope="col">Address</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Product</th>
                        <th scope="col"> </th>
                        <th scope="col">Advance</th>
                        <th scope="col">Status</th>
                         <th scope="col">Action</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each orders}}
                    <tr class="align-middle">
                        <td>{{this.orderObject.date}}</td>
                        <td>{{this.orderObject.deliveryDetails.address}}</td>
                        <td>{{this.orderObject.deliveryDetails.mobile}}</td>
                        <td>{{this.orderObject.products}}<td>
                        <td>{{this.orderObject.totalAmount}}</td>
                        <td>{{this.orderObject.status}}</td>
                        <td>
                            <a href="/cancel-order/{{this._id}}"
                                onclick="return confirm('Are You Sure to Cancel This Order ?')"
                                class="btn btn-danger">Cancel</a>
                        </td>
                        {{!-- <td>
                            <a href="/view-ordered-products/{{this.orderObject.offerId}}" class="btn btn-primary">View Product</a>
                        </td> --}}
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{else}}

    <div class="container mt-5">
        <div class="alert alert-secondary" role="alert">
            <h4 class="alert-heading">You Have Booked Nothing!</h4>
            <hr>
            <p class="mb-0">You need to book soemthing.</p>
        </div>
        <div class="row">
            <a href="/offers" class="btn btn-primary">Add Products</a>
        </div>
    </div>
    {{/if}}
</section>