<style>
    body{
    background-image: url('/images/bg2.jpg');
    }
</style>
<br><br><br><br>
<div class="row mx-auto ">
    <div class="col-md-6 mx-auto">
        <div class="container mt-5">
                <div class="card p-5">
            <h2 class="text-center">Your Feedback</h2>
            <form action="/add-feedback" method="POST">
            {{#if user}}
                <div class="form-group mt-4">
                    <label>Your Name</label>
                    <input type="text" class="form-control" name="Name" value="{{user.Name}}" placeholder="Enter Name" disabled>
                </div>

                  <div class="form-group mt-4">
                    <label>Your Email</label>
                    <input type="text" class="form-control" name="Email" value="{{user.Email}}" placeholder="Enter Name" disabled>
                </div>
            {{/if}}
                    <label class="mt-4">Shop</label>
                <select class="form-select" name="shopname" aria-label="Default select example">
                <option selected disabled>Select Shop</option>
                {{#each shops}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
                </select>
                <div class="form-group mt-4">
                    <label> Your Feedback</label>
                    <input type="text" class="form-control" name="feedback" placeholder="Your Feedback">
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-primary mt-4">Submit Your Feedback</button>
                </div>
            </form>
        </div>
    </div>
    </div>
</div>
<br><br><br><br>
