    // Function to handle the search
    $("#search").on("click", function() {
    var searchText = $("#searchtext").val().toLowerCase();
    var matchedItems = [];

    // Iterate through each portfolio item
    $(".portfolio-item").each(function() {
        var item = $(this);
        var itemData = item.data();

        // Check if the search text is found in any data attribute or in the portfolio item's content
        var foundInData = Object.values(itemData).some(function(value) {
            return value && value.toString().toLowerCase().includes(searchText);
        });
        var foundInContent = item.find(".portfolio-wrap").text().toLowerCase().includes(searchText);

        if (foundInData || foundInContent) {
            matchedItems.push(item);
        }
    });

    // Clear the search results modal content
    $("#searchResults").empty();

    if (matchedItems.length > 0) {
        // Add matched items to the search results modal
        matchedItems.forEach(function(item) {
            $("#searchResults").append(item.clone());
        });

        // Show the modal with search results
        $("#searchResultsModal").css("display", "block");
    } else {
        // If no results are found, you can display a message
        $("#searchResults").text("No matching items found.");
        $("#searchResultsModal").css("display", "block");
    }
});

