<div class="page-wrapper">
    <div class="page-breadcrumb">
              <div class="container-fluid">
                <h3>Manage Categories</h3>
   <a href="/admin/add-category" class="btn btn-danger mb-4">+ Add Category</a>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                              <th scope="col">No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Remove</th>

                               
                            </tr>
                        </thead>
                        <tbody>
              {{#each categories}}
                    <tr class="align-middle">
                        <th scope="row">{{incremented @index}}</th>
                        <td>{{this.name}}</td>
                        <td><a href="/admin/remove-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are You Sure to Delete {{this.Name}} ?')">Remove</a></td>
                    </tr>
                    {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>