<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="container-fluid">
            <h3>Manage Complaints</h3>
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">No.</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Shop Name</th>
                                    <th scope="col">Complaint</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Reply</th>
                                    <th scope="col">Remove</th>


                                </tr>
                            </thead>
                            <tbody>
                                {{#each complaints}}
                                <tr class="align-middle">
                                    <th scope="row">{{incremented @index}}</th>
                                    <td>{{this.name}}</td>
                                    <td>{{this.email}}</td>
                                    <td>{{this.shopname}}</td>
                                    <td>{{this.complaint}}</td>
                                    <td>{{this.status}}</td>
                                    <td><a href="/admin/complaints-reply?id={{this._id}}" class="btn btn-primary">Give Reply</a>
                                    </td>
                                    <td><a href="/admin/delete-complaint/{{this._id}}" class="btn btn-danger"
                                            onclick="return confirm('Are You Sure to Delete {{this.name}} ?')">Remove</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>