<div class="page-wrapper">
    <div class="page-breadcrumb">
              <div class="container-fluid">
                <h3>Manage Feedbacks</h3>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                              <th scope="col">No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Shop Name</th>
                        <th scope="col">Feedback</th>
                        <th scope="col">Remove</th>

                               
                            </tr>
                        </thead>
                        <tbody>
              {{#each feedbacks}}
                    <tr class="align-middle">
                        <th scope="row">{{incremented @index}}</th>
                        <td>{{this.name}}</td>
                     <td>{{this.email}}</td>
                         <td>{{this.shopname}}</td>
                        <td>{{this.feedback}}</td>
                        <td><a href="/admin/remove-feedback/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are You Sure to Delete {{this.name}} ?')">Remove</a></td>
                    </tr>
                    {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>