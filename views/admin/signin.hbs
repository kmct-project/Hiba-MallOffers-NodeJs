<div class="row mx-auto">
    <div class="col-md-6 mx-auto">
        <div class="container mt-5">
            <div class="card p-5 card-white shadow">
                <center><img src="/images/hlogo.png" width="40%"></center>
                <h2 class="text-center">Admin Panel</h2>
                <form action="/admin/signin" method="POST">
                    {{#if signInErr}}
                    <div class="alert alert-danger" role="alert">
                        <p class="error alert-heading">{{signInErr}}</p>
                    </div>
                    {{/if}}
                    <div class="form-group mt-4">
                        <label>Email address</label>
                        <input type="email" class="form-control" name="Email" placeholder="Enter Email">
                    </div>
                    <div class="form-group mt-4">
                        <label>Password</label>
                        <input type="password" class="form-control" name="Password" placeholder="Password">
                    </div>
                    <div class="row">
                        <a href="/admin/signup" class="mt-4">Create a New Account ?</a>
                        <button type="submit" class="btn btn-primary mt-2">Sign Up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-repeat: no-repeat;
        background-size: cover;
        background-image: url('/images/img3.jpg');
    }
</style>