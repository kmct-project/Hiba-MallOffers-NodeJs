<div class="page-wrapper">
    <div class="page-breadcrumb">
              <div class="container-fluid">
                <h3>Manage Shops</h3>
   {{!-- <a href="/admin/remove-all-users" onclick="return confirm('Are You Sure to Remove All Users ?')" class="btn btn-danger mb-4">Remove All Users</a> --}}
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                              <th scope="col">No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Logo</th>
                        <th scope="col">Floor</th>
                        <th scope="col">Category</th>

                               
                            </tr>
                        </thead>
                        <tbody>
              {{#each shops}}
                    <tr class="align-middle">
                        <th scope="row">{{incremented @index}}</th>
                        <td>{{this.name}}</td>
                        <td><img src="{{this.logo}}" height="50" width="50"/></td>
                        <td>{{this.floor}}</td>
                         <td>{{this.category}}</td>
                        {{!-- <td><a href="/admin/remove-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are You Sure to Delete {{this.Name}} ?')">Remove</a></td> --}}
                    </tr>
                    {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>