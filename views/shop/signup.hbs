<div class="row mx-auto">
    <div class="col-md-6 mx-auto">
        <div class="container mt-5">
            <center><img src="/images/hlogo.png" width="40%"></center>

            <h2 class="text-center">Shop Sign Up</h2>
            <form action="/shop/signup" method="POST">
                {{#if signUpErr}}
                <div class="alert alert-danger" role="alert">
                    <p class="error alert-heading">{{signUpErr}}</p>
                </div>
                {{/if}}
                <div class="form-group mt-3">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Enter Shop Name" required>
                </div>
                <div class="form-group mt-3">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="email" placeholder="Enter Email" required>
                </div>
                <div class="form-group mt-3">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                </div>
                <div class="form-group mt-3">
                    <label>Category</label>
                    <input type="text" class="form-control" name="category" placeholder="Category" required>
                </div>

                <div class="form-group mt-3">
                    <label>Phone</label>
                    <input type="text" class="form-control" name="phone" placeholder="Phone Number" required>
                </div>
                <div class="form-group mt-3">
                    <label>Logo Url</label>
                    <input type="text" class="form-control" name="logo"
                        placeholder="https://hilitemall.com/upload/store_logos/logo.png" required>
                </div>
                <div class="form-group mt-3">
                    <label>Website</label>
                    <input type="text" class="form-control" name="website" placeholder="Website">
                </div>
                <div class="row">
                    <a href="/shop/signin" class="mt-4 float-right">Already Have Account ?</a>
                    <button type="submit" class="btn btn-primary mt-2">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>

