
<section>
    <div class="container mt-5">
        
             <h1>{{shopDetails.name}}</h1>
             <hr>
      
        <div class="row">
              <div class="col-md-6">
                <div class="card">
                    <img src="{{shopDetails.logo}}" class="card-img-top" alt="Image 1">
                    {{!-- <div class="card-body">
                        <h5 class="card-title">{{shopDetails.name}}</h5>
                    </div> --}}
                </div>
            </div>
             <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{shopDetails.name}}</h5>
                        <h5 class="card-title" style="color: red;">{{shopDetails.floor}}</h5>
                        <hr>
                        <h5 class="card-title">Category : {{shopDetails.category}}</h5>
                        <h5 class="card-title">Phone : {{shopDetails.phone}}</h5>
                        <h5 class="card-title">Email Id : {{shopDetails.emailId}}</h5>
                    </div>
                </div>
            </div>
            {{!-- <div class="col-2">
                <a href="/admin/add-shops" class="btn btn-success mb-2">Add a Product</a>
                <a href="/admin/delete-all-products" onclick="return confirm('Are You Sure to Delete All Products ?')"
                    class="btn btn-danger">Delete All Products</a>
            </div> --}}
            
        </div>
    </div>

      <h2>Recent Offers</h2>
          {{#each offerDetails.offers}}
            <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-5">
                <div class="card mx-auto" style="width: 16rem; ">
                    <img src="/images/offer-images/{{this.img_id}}.png" class="card-img-top" alt="phone-image"
                        style="height: 17rem;">
                    <hr class="text-secondary">
                    <div class="card-body pb-1">
                        <div class="" style="display: flex; justify-content: end;">
                            <div class="" style="margin-right: auto;">
                                <h6 class="card-title" style="color:orange;">{{this.offername}}</h6>
                                <b><h5 class="card-title">{{this.name}}</h5></b>
                            </div>
                            <div class="">
                                 <p class="card-text" style="color: red;"><small><s>₹{{this.mrp}}</s></small></p>
                                <p class="card-text" style="color: green;"><small>₹{{this.price}}</small></p>
                            </div>
                        </div>
                        <p class="card-text">{{this.description}}</p>
                        <div class="row">
                            <a href="/booknow/{{this.img_id}}/?price={{this.price}}&mobile={{...offerDetails.phone}}" onclick="return confirm('Are You Sure to book this ?')" class="btn btn-danger mt-3">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
    </div>



</section>

<style>
       #header .logo {
    overflow: hidden;
    padding: 16px 30px 12px 30px;
    background: #009970;
    border-radius: 50px;
}
    #header .header-container {
    background: #ebebeb;
    border-radius: 50px;
}
</style>