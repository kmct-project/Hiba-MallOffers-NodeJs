            <div class="container-fluid">

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Price</th>
                                <th>Discount Price</th>
                                {{#ifeq shopDetails.category "fashion and accessories"}}
                                  <th>Target</th>
                                 <th>Size</th>
                                 <th>Type</th>
                                 <th>Color</th>
                                 {{else}}
                                {{#ifeq shopDetails.category "shoes bags"}}
                                <th>Target</th>
                                 <th>Size</th>
                                 <th>brand</th>
                                 {{else}}
                                {{#ifeq shopDetails.category "watches optics"}}
                                 <th>Target</th>
                                 <th>Size</th>
                                 <th>brand</th>
                                 {{else}}
                                 {{#ifeq shopDetails.category "hypermarket"}}
                                  <th>Quantity</th>
                                  <th>Brand</th>
                                  {{else}}
                                {{#ifeq shopDetails.category "dining"}}
                                 <th>Quantity</th>
                                <th>Food Categories</th>
                                {{else}}
                                {{#ifeq shopDetails.category "electronics home appliances"}}
                                <th>Size/weight</th>
                                <th>brand</th>
                                {{else}}
                                <th style="visibility: hidden;"> </th>
                               {{/ifeq}}
                                {{/ifeq}}
                                {{/ifeq}}
                                {{/ifeq}}
                                {{/ifeq}}
                                {{/ifeq}}
                                <th>Offer name</th>
                                <th>Edit</th>
                                <th>Delete</th>

                               
                            </tr>
                        </thead>
                        <tbody>
            {{#each shopDetails.offers}}
                            <tr>
                                <td>{{incremented @index}}</td>
                                <td>{{this.name}}</td>
                                <td> <img src="/images/offer-images/{{this.img_id}}.png" class="card-img-top"></td>
                                 <td>₹{{this.mrp}}</td>
                                <td>₹{{this.price}}</td>

                                {{#ifeq ...shopDetails.category "fashion and accessories"}}
                                 <td>{{this.target_audience}}</td>
                                 <td>{{this.size}}</td>
                                 <td>{{this.type}}</td>
                                <td>{{#if this.color}}{{this.color}}{{else}}none{{/if}}</td>
                                 {{else}}
                                {{#ifeq ...shopDetails.category "shoes bags"}}
                                <td>{{this.target_audience}}</td>
                                 <td>{{this.size}}</td>
                                 <td>{{this.brand}}</td>
                                 {{else}}
                                {{#ifeq ...shopDetails.category "watches optics"}}
                                 <td>{{this.target_audience}}</td>
                                 <td>{{this.size}}</td>
                                 <td>{{this.brand}}</td>
                                 {{else}}
                                 {{#ifeq ...shopDetails.category "hypermarket"}}
                                  <td>{{this.quantity}}</td>
                                  <td>{{this.brand}}</td>
                                  {{else}}
                                {{#ifeq ...shopDetails.category "dining"}}
                                <td>{{this.quantity}}</td>
                                <td>{{this.foodCategories}}</td>
                                {{else}}
                                {{#ifeq ...shopDetails.category "electronics home appliances"}}
                                  <td>{{this.size}}</td>
                                  <td>{{this.brand}}</td>
                                {{else}}
                                <td style="visibility: hidden;"> </td>
                               {{/ifeq}}
                                {{/ifeq}}
                                {{/ifeq}}
                                {{/ifeq}}
                                {{/ifeq}}
                                {{/ifeq}}
                                
                                <td>{{this.offername}}</td>
                                <td><a href="/shop/edit-offer/{{@index}}" class="btn btn-primary mt-3">Edit</a></td>

                                <td><a href="/shop/delete-offer/{{this.img_id}}" onclick="return confirm('Are You Sure to Delete  Offer ?')" class="btn btn-danger mt-3">Delete</a></td>

                            </tr>
                            {{/each}}



                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
