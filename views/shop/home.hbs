            <div class="container-fluid">

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Price</th>
                                <th>Discount Prince</th>
                                <th>Category</th>
                                <th>Offer name</th>
                                <th>Size</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Edit</th>
                                <th>Delete</th>

                               
                            </tr>
                        </thead>
                        <tbody>
            {{#each shopDetails.offers}}
                            <tr>
                                <td>{{incremented @index}}</td>
                                <td>{{this.name}}</td>
                                <td> <img src="/images/offer-images/{{this.img_id}}.png" class="card-img-top"></td>
                                 <td>₹{{this.mrp}}</td>
                                <td>₹{{this.price}}</td>
                                <td></td>
                                <td>{{this.offername}}</td>
                                 <td></td>
                                  <td></td>
                                <td>{{this.description}}</td>
                                <td><a href="/shop/edit-offer/{{@index}}" class="btn btn-primary mt-3">Edit</a></td>

                                <td><a href="/shop/delete-offer/{{this.img_id}}" onclick="return confirm('Are You Sure to Delete  Offer ?')" class="btn btn-danger mt-3">Delete</a></td>

                            </tr>
                            {{/each}}



                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
